<h3>Items search for "<%= @content %>"</h3>
<table class="table">
  <% @model == 'item' %>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th>商品詳細</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @records.each do |item| %>
      <tr>
        <td><%= image_tag item.image, size:'50x50' %></td>
        <td>
          <% if admin_signed_in? %>
            <%= link_to item.name, admin_item_path(item.id) %>
          <% else %>
            <%= link_to item.name, item_path(item.id) %>
          <% end %>
        </td>
        <td><%= item.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>
