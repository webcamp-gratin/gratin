<div class="container">
  <div class="row">
    <h2>注文履歴</h2>
    <div class="col">
      <table class="table">
        <tr>
          <td>購入者</td>
          <td>
            <%= link_to admin_customer_path(@order.customer) do %>
            <%= @order.name %>
            <% end %>
          </td>
        </tr>
        <tr>
          <td>注文日</td>
          <td>
            <%= @order.created_at.strftime('%Y/%m/%d') %>
          </td>
        </tr>
        <tr>
          <td>配送先</td>
          <td>
            <%= @order.address_display %>
          </td>
        </tr>
        <tr>
          <td>支払方法</td>
          <td>
            <%= @order.payment_method_i18n %>
          </td>
        </tr>
        <tr>
          <td>注文ステータス</td>
          <td>
            <%= form_with model: @order, url: admin_order_path(@order), method: :patch do |f| %>
              <%= f.select :status, Order.statuses_i18n.invert %>
              <%= f.submit "更新", class: "btn btn-success" %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
    <div class="col">
      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>制作ステータス</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @ordered_items.each do |ordered_item| %>
          <tr>
            <td>
              <%= ordered_item.item.name %>
            </td>
            <td>
              <%= ordered_item.item.no_tax %>
            </td>
            <td>
              <%= ordered_item.amount %>
            </td>
            <td>
              <%= ((ordered_item.item.no_tax * 1.1 * ordered_item.amount).floor).to_s(:delimited) %>
            </td>
              <%= form_with model: ordered_item, url: admin_ordered_item_path(ordered_item), method: :patch do |f| %>
            <td>
              <%= f.select :making_status, OrderedItem.making_statuses_i18n.invert %>
            </td>
            <td>
              <%= f.submit "更新", class: "btn btn-success" %>
            </td>
              <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
      <table class="table" >
        <tr>
          <td>商品合計</td>
          <td><%=((@total_price).floor).to_s(:delimited) %></td>
        </tr>
        <tr>
          <td>送料</td>
          <% @order.postage %>
          <td>800円</td>
        </tr>
        <tr>
          <td>請求金額合計</td>
          <% @order.subtotal = @order.postage + @total_price.to_i %>
          <td><%= (@order.subtotal.floor).to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>
</div>