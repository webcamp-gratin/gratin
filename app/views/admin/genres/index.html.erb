<div>
  <h2 class="text-center">ジャンルの一覧・追加</h2>
  <%= form_with model: @genre, url: admin_genres_path, method: :post, local:true do |f| %>
      <div class="form_input">
          <%= f.label :ジャンル名 %>
          <%= f.text_field :name, :placeholder => "ジャンル名",  class: "form-control" %>
      </div>
      <div class="form_action row">
          <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
  <% end %>
</div>
<div>
  <table>
    <thead>
      <tr>
        <th>ジャンル</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% @genres.each do |genre| %>
          <td>
              <%= genre.name %>
          </td>
          <td>
            <%= link_to "編集する", edit_admin_genre_path(genre) %>
          </td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>