<div class="container">
  <div class="row">
    <div class=col-auto>
      <h3 class="table-active">ジャンルの一覧・追加</h3></br>
        <div class="form-inline">
        <%= form_with model: @genre, url: admin_genres_path, method: :post, local:true do |f| %>
          <%= f.label :ジャンル名 %>
          <%= f.text_field :name, :placeholder => "ジャンル名",  class: "form-control" %>
          <%= f.submit "新規登録", class: "btn btn-success" %>
        <% end %>
        </div>

        </br>
        <table class="table">
        <thead>
          <tr class="table-active">
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td class="text-left">
                <%= genre.name %>
              </td>
              <td>
                <%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>