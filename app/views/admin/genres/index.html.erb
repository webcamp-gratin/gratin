  <div>
      <h2 class="text-center">ジャンルの一覧・追加</h2>
      <%= form_for @genre,:url => {:action => :create} do |f| %>
          <div class="form_input">
              <%= f.label :ジャンル名 %>
              <%= f.text_field :name, :placeholder => "ジャンル名",  class:"form-control" %>
          </div>
          <div class="form_action row">
              <%= f.submit "新規登録", class: "btn btn-success" %>
          </div>
      <% end %>
  </div>
     <% @genres.each do |genre| %> <%= genre.name %> <% end %>
       