<div class="container">
  <div class="row">
    <div class=col-auto>
      <h3 class="table-active">ジャンルの一覧・追加</h3></br>
    </div>
  </div>
    <%= form_with model: @genre, url: admin_genres_path, method: :post, local:true do |f| %>
      <div class="form-inline">
        <%= f.label :ジャンル名, class: "col-3" %>
        <%= f.text_field :name, :placeholder => "ジャンル名",  class: "form-control col-5 mr-3" %>
        <%= f.submit "新規登録", class: "btn btn-success col-2 ml-5" %>
      </div>
    <% end %>
    </br>
    <div class="row">
      <table class="table col-4">
        <thead>
          <tr class="table-active">
            <th style="width: 60%">ジャンル</th>
            <th style="width: 40%"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td class="text-left">
                <%= genre.name %>
              </td>
              <td>
                <%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success ml-3" %>
              </td>
            </tr>
          <% end %>
        </tbody>
     </table>
    </div>
</div>