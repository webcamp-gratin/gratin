<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2 class="head-line text-center">ジャンルの一覧・追加</h2>
      <%= form_with model: @genre, url: admin_genres_path, method: :post, local:true do |f| %>
          <div class="form_input　col-xs-offset-1">
              <%= f.label :ジャンル名 %>
              <%= f.text_field :name, :placeholder => "ジャンル名",  class: "form-control" %>
          </div>
          <div class="form_action row">
              <%= f.submit "新規登録", class: "btn btn-success" %>
          </div>
      <% end %>
    </div>

    <div>
      <table class="table table-hover table-inverse table-bordered">
        <thead>
          <tr class="info text-center">
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td class="text-left">
                <%= genre.name %>
              </td>
              <td>
                <%= link_to "編集する", edit_admin_genre_path(genre) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>