<div>
  <h2 class="text-center">ジャンル編集</h2>
  <%= form_for @genre,:url => {:action => :update} do |f| %>
    <div class="form_input">
      <%= f.label :ジャンル名 %>
      <%= f.text_field :name, :placeholder => "ジャンル名",  class:"form-control" %>
    </div>
    <div class="form_action row">
      <%= f.submit "変更を保存", class: "btn btn-success" %>
    </div>
　<% end %>
</div>