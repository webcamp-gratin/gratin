<div class="container">
  <h4 class="table-active"><%= @customer.full_name %>さんの会員詳細</h4>
  <div class="row">
    <div class="col-sm-8 col-md-offset-1 mt-3">
      <table>
        <tr>
          <th class="col-sm-3">会員ID</th>
          <th class="col-sm-5"><%= @customer.id %></th>
        </tr>
        <tr>
          <th class="col-sm-3">氏名</th>
          <th class="col-sm-5"><%= @customer.full_name %></th>
        </tr>
        <tr>
          <th class="col-sm-3">フリガナ</th>
          <th class="col-sm-5"><%= @customer.first_name_kana %> <%= @customer.last_name_kana %></th>
        </tr>
        <tr>
          <th class="col-sm-3">郵便番号</th>
          <th class="col-sm-5"><%= @customer.postcode %></th>
        </tr>
        <tr>
          <th class="col-sm-3">住所</th>
          <th class="col-sm-5"><%= @customer.address %></th>
        </tr>
        <tr>
          <th class="col-sm-3">電話番号</th>
          <th class="col-sm-5"><%= @customer.phone_number %></th>
        </tr>
        <tr>
          <th class="col-sm-3">メールアドレス</th>
          <th class="col-sm-5"><%= @customer.email %></th>
        </tr>
        <tr>
          <th class="col-sm-3">会員ステータス</th>
          <th class="col-sm-5">
            <% if @customer.is_deleted == false %>
              <p class="text-success font-weight-bold">有効</p>
            <% else %>
              <p class="text-secondary font-weight-bold">退会</p>
            <% end %>
        </tr>
        <tr>
          <th><%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success" %></th>
          <th><%= link_to "注文履歴一覧をみる", admin_orders_path, class: "btn btn-primary" %></th>
        </tr>
      </table>
    </div>
  </div>
</div>
