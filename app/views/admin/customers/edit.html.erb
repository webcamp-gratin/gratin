<div class="container">
  <div class="row">
    <h4 class="table-active"><%= @customer.full_name %>さんの会員情報編集</h4>
    <%= render 'layouts/error', model: @customer %>
    <div class="col-sm-12 mt-5">
      <%= form_with model: @customer, url: admin_customer_path, method: :patch, local:true do |f| %>

        <div class="form-group row">
          <p class="col-sm-2">会員ID</p>
          <p class="col-sm-2"><%= @customer.id %></p>
        </div>

        <div class="form-group row">
          <%= f.label :名前, class: 'col-sm-2 control-label' %>
          <%= f.text_field :first_name, autofocus: true, class: 'rounded col-sm-2 mr-5' %>
          <%= f.text_field :last_name, class: 'rounded col-sm-2' %>
        </div>

        <div class="form-group row">
          <%= f.label :フリガナ, class: 'col-sm-2 control-label' %>
          <%= f.text_field :first_name_kana , class: 'rounded col-sm-2 mr-5'%>
          <%= f.text_field :last_name_kana, class: 'rounded col-sm-2' %>
        </div>

        <div class="form-group row">
          <%= f.label :郵便番号, class: 'col-sm-2 control-label' %>
          <%= f.text_field :postcode, class: 'rounded col-sm-2' %>
        </div>

        <div class="form-group row">
          <%= f.label :住所, class: 'col-sm-2 control-label' %>
          <%= f.text_field :address, class: 'rounded col-sm-6' %>
        </div>

        <div class="form-group row">
          <%= f.label :電話番号, class: 'col-sm-2 control-label' %>
          <%= f.text_field :phone_number, class: 'rounded col-sm-2' %>
        </div>

        <div class="form-group row">
          <%= f.label :メールアドレス, class: 'col-sm-2 control-label' %>
          <%= f.email_field :email, class: 'rounded col-sm-2' %>
        </div>

        <div class="form-group row">
          <%= f.label :会員ステータス, class: 'col-sm-2 control-label' %>
          <%= f.radio_button :is_deleted, :false %>
          <%= f.label :is_deleted, "有効", class: 'col-sm-1' %>
          <%= f.radio_button :is_deleted, :true %>
          <%= f.label :is_deleted, "退会", class: 'col-sm-1' %>
        </div>

        <div class="action">
          <%= f.submit '変更を保存', class: "btn btn-success btn-lg offset-2 font-weight-bold" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
