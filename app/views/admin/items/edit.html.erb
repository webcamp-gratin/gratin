<h1>商品編集</h1>
<table>
  <%= form_with model: @item, url: admin_item_path, method: :patch, local:true do |f| %>
    <tr>
      <td>商品画像</td>
      <td><%= f.file_field :image %></td>
    </tr>
    <tr>
      <td>商品名</td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td>商品説明</td>
      <td><%= f.text_area :description %></td>
    </tr>
    <tr>
      <td>ジャンル</td>
      <td><%= f.collection_select(:genre_id, @genres, :id, :name, prompt: "-- 選択してください --") %>
      </td>
    </tr>
    <tr>
      <td>税込価格</td>
      <td><%= f.text_field :no_tax %></td>
    </tr>
      <td>販売ステータス</td>
      <td>
        <%= f.radio_button :is_active, :true %>
        <%= f.label :is_active, "販売中" %>
        <%= f.radio_button :is_active, :false %>
        <%= f.label :is_active "販売停止中" %>
      </td>
    </tr>
    <tr>
      <td><%= f.submit '編集を保存する' %></td>
    </tr>
  <% end %>
</table>