<div class="container">
  <h4 class="head-line title_h2 text-left mt-3">商品詳細</h4>
  <div class="row">
    <div class="col-sm-10 d-flex justify-content-center mt-5">
      <div class="col-sm-4 ">
        <%= image_tag @item.image, :size => '300x250', accept: "image/*" %>
      </div>
      <div class="col-sm-6">
        <table class="table">
          <tr>
            <th>商品名</th>
            <th><%= @item.name %></th>
          </tr>
          <tr>
            <th>商品説明</th>
            <th><%= @item.description %></th>
          </tr>
          <tr>
            <th>ジャンル</th>
            <th><%= @item.genre.name %></th>
          </tr>
          <tr>
            <th>税込価格（税抜価格）</th>
            <th>
              <%= ((@item.no_tax * 1.1).floor).to_s(:delimited) %>(<%= (@item.no_tax).to_s(:delimited) %>)円
            </th>
          </tr>
          <tr>
            <th>販売ステータス</th>
            <th>
              <% if @item.is_active == true %>
                販売中
              <% else %>
                売切れ
              <% end %>
            </th>
          </tr>
          <tr>
            <th><%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success btn-lg mx-auto d-block mt-3" %></th>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>
