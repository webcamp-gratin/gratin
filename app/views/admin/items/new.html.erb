<div class="container">
  <div class="row">
    <div class="col-sm-12 mt-5">
      <div class="col-sm-3 bg-secondary text-light mt-3 mb-4">
        <h4>商品新規登録</h4>
      </div>
      <div class="col-sm-7 mx-auto">
      <%= form_with model: @item, url: admin_items_path, method: :post, local:true do |f| %>
        <div class="form-group row">
          <%= f.label :新規画像, class: 'col-sm-3 control-label' %><br />
          <%= f.file_field :image, class: 'rounded col-sm-5' %>
        </div>

        <div class="form-group row">
          <%= f.label :商品名, class: 'col-sm-3 control-label' %><br />
          <%= f.text_field :name, class: 'rounded col-sm-5' %>
        </div>

        <div class="form-group row">
          <%= f.label :商品説明, class: 'col-sm-3 control-label' %><br />
          <%= f.text_area :description, class: 'rounded col-sm-5' %>
        </div>

        <div class="form-group row">
          <%= f.label :ジャンル, class: 'col-sm-3 control-label' %><br />
          <%= f.collection_select(:genre_id, @genres, :id, :name, prompt: "-- 選択してください --") %>
        </div>

        <div class="form-group row">
          <%= f.label :税込価格, class: 'col-sm-3 control-label' %><br />
          <%= f.text_field :no_tax, class: 'rounded col-sm-5' %>
        </div>

        <div class="form-group row">
          <%= f.label :販売ステータス, class: 'col-sm-3 control-label' %><br />
          <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active, "販売中", class: "col-sm-2" %>
          <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active, "販売停止中", class: "col-sm-3" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録",class: "btn btn-success col-sm-3 mx-auto d-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>