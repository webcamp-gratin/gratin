<div>
  <h3 class="text-center">ショッピングカート</h3>
    <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class: "btn btn-danger" %>
    <table>
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込み）</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= image_tag(cart_item.item, :image, size: "50x40") %><%= cart_item.item.name %></td>
          <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
          <td>
            <%= form_with model: cart_item, url: cart_item_path, method: :patch, local:true do |f| %>
              <p>
                <%= f.select:amount, *[1..5] %>
                <%= f.submit "変更", class: "btn btn-primary" %>
              </p>
              <% end %>
          </td>
          <td>
            <%= cart_item.subtotal.to_s(:delimited) %>
          </td>
          <td>
            <%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger" %>
          </td>
        </tr>
        <% end %>
      </tbody>
      </table>
</div>

<div>
  <span>
    <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
  </span>
</div>
<div>
  <table>
    <tr>
      <td>合計金額</td>
      <td><%= @total_price.floor.to_s(:delimited) %></td>
    </tr>
  </table>
</div>

<div>
  <span>
    <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success"%>
  </span>
</div>