<h2>新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path, method: :post,  local:true do |f| %>
  <%= render "admin/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :名前 %><br />
    <%= f.label :（姓） %>
    <%= f.text_field :first_name, autofocus: true %>
    <%= f.label :（名） %>
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :フリガナ %><br />
    <%= f.label :（セイ） %>
    <%= f.text_field :first_name_kana %>
    <%= f.label :（メイ） %>
    <%= f.text_field :last_name_kana %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email %>
  </div>


  <div class="field">
    <%= f.label :郵便番号（ハイフンなし） %><br />
    <%= f.text_field :postcode %>
  </div>

  <div class="field">
    <%= f.label :住所 %><br />
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :電話番号（ハイフンなし） %><br />
    <%= f.text_field :phone_number %>
  </div>

  <div class="field">
    <%= f.label :パスワード（6文字以上） %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "password_confirm" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録",class: "btn btn-success" %>
  </div>

<% end %>

<h2>既に登録済みの方</h2>

<%= link_to "こちら", new_customer_session_path %>
<span> からログインしてください。</span>

</div>
