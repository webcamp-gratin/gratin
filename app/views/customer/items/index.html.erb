<div class="container">
  <div class="row">
    <div>
      <h4 class="mt-3 font-weight-bold">商品一覧</h4>
    </div>
    <div class="mt-4">
      <p>（全<%= @item.count %>件）</p>
    </div>
  </div>
  <div class="row">
    <div class="col-12 d-flex flex-wrap font-weight-bold">
      <% @items.each do |item| %>
        <div class="mr-5 mt-3">
          <%= link_to item_path(item.id) do %>
            <%= image_tag item.image, accept: "image/*", size:'220x150' %>
          <% end %><br/>
          <%= item.name %></br>
          ¥<%= item.no_tax.to_s(:delimited) %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= paginate @items %>
