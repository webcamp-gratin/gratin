<h4 class="table-active col-auto">会員情報編集</h4>
<%= render 'layouts/error', model: @customer %>
<%= form_with model: @customer, url: customer_path, method: :patch,  local:true do |f| %>
  <div class="field">
    <%= f.label :名前 %><br />
    <%= f.label :（姓） %>
    <%= f.text_field :first_name, autofocus: true, class: 'form-control' %>
    <%= f.label :（名） %>
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :フリガナ %><br />
    <%= f.label :（セイ） %>
    <%= f.text_field :first_name_kana %>
    <%= f.label :（メイ） %>
    <%= f.text_field :last_name_kana %>
  </div>

  <div class="field">
    <%= f.label :郵便番号 %>
    <%= f.text_field :postcode %>
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :電話番号 %>
    <%= f.text_field :phone_number %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email %>
  </div>
    <br>
  <div class="actions">
    <%= f.submit "編集内容を保存",class: "btn btn-success" %>
    <%= link_to "退会する", unsubscribe_path, class: "btn btn-danger" %>
  </div>

<% end %>
