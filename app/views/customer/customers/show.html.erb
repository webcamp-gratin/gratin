<h2>マイページ</h2>
<h4>登録情報</h4>
<%= link_to "編集する", edit_customer_path(@customer), class: "btn btn-success"%>
  <table>
    <tr>
      <th>氏名</th>
      <th><%= @customer.name %></th>
    </tr>
    <tr>
      <th>カナ</th>
      <th><%= @customer.first_name_kana %><%= @customer.last_name_kana %></th>
    </tr>
    <tr>
      <th>郵便番号</th>
      <th><%= @customer.postcode %></th>
    </tr>
    <tr>
      <th>住所</th>
      <th><%= @customer.address %></th>
    </tr>
    <tr>
      <th>電話番号</th>
      <th><%= @customer.phone_number %></th>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <th><%= @customer.email %></th>
    </tr>
  </table>
<h4>配送先</h4>
  <%= link_to "一覧を見る", customer_orders_path, class: "btn btn-primary" %>
<h4>注文履歴</h4>
  <%= link_to "一覧を見る", customer_addresses_path, class: "btn btn-primary" %>