<div class="container">
  <div class="row">
    <h4 class="table-active col-auto mt-3">配送先編集</h4>
  </div>
  <div class="row">
    <%= render 'layouts/error', model: @address %>
    <div class="col-sm-10 mt-4">
      <%= form_with(model: @address, url:address_path, local: true ,method: :patch) do |f| %>
         <div class="form-group">
          <%= f.label :"郵便番号(ハイフンなし)", class: "col-sm-3 col-form-label" %>
          <%= f.text_field :postcode, autofocus: true, class: "col-sm-4" %>
        </div>

        <div class="form-group">
          <%= f.label :"住所", class: "col-sm-3 col-form-label" %>
          <%= f.text_field :address,  class: "col-sm-6" %>
        </div>

        <div class="form-group">
          <%= f.label :"宛名", class: "col-sm-3 col-form-label" %>
          <%= f.text_field :name, class: "col-sm-4" %>
          <%= f.submit '変更内容を保存', class: "btn btn-success float-right col-sm-2" %>
        </div>
      <% end %>
    </div>
  </div>
</div>