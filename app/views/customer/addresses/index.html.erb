<div class="container">
  <div class="row">
    <h4 class="table-active col-auto mt-3">配送先登録/一覧</h4>
  </div>
  <%= render 'layouts/error', model: @address %>
  <div class="row">
    <div class="col-sm-10 mt-4 mb-3">
      <%= form_with(model: @address, :url => {:controller => "customer/addresses"}) do |f| %>
        <div class="form-group">
          <%= f.label :"郵便番号(ハイフンなし)", class: "col-sm-3 col-form-label" %>
          <%= f.text_field :postcode, :placeholder => "0000000", class: "col-sm-4" %>
        </div>

        <div class="form-group">
          <%= f.label :"住所", class: "col-sm-3 col-form-label" %>
          <%= f.text_field :address, :placeholder => "東京都渋谷区神園0-0", class: "col-sm-6" %>
        </div>

        <div class="form-group">
          <%= f.label :"宛名", class: "col-sm-3 col-form-label" %>
          <%= f.text_field :name, :placeholder => "蔵誕　美味", class: "col-sm-4" %>
          <%= f.submit '新規登録' ,class: "btn btn-success float-right col-sm-2" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-9 mt-3">
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <td bgcolor="#f5f5f5" style="width: 15%">郵便番号</td>
            <td bgcolor="#f5f5f5" style="width: 40%">住所</td>
            <td bgcolor="#f5f5f5" style="width: 15%">宛名</td>
            <td bgcolor="#f5f5f5" style="width: 30%"></td>
          <tr>
        </thead>
        <% @addresses.each do |addresses| %>
          <tbody>
          <tr>
           	<td><%= addresses.postcode %></td>
           	<td><%= addresses.address %></td>
           	<td><%= addresses.name %></td>
           	<td><%= link_to "編集する", edit_address_path(addresses), class: 'btn btn-success ml-2' %>
                <%= link_to "削除する", address_path(addresses), method: :delete, class: 'btn btn-danger ml-2'  %>
            </td>
          </tr>
         </tbody>
       <% end %>
      </table>
    </div>
  </div>
</div>

