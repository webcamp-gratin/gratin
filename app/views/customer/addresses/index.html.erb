<div class="container">
  <h2>配送先登録/一覧</h2>
  <%= render 'layouts/error', model: @address %>
  <div class="row">
    <%= form_with(model: @address, :url => {:controller => "customer/addresses"}) do |f| %>
        <div class="addres col-xs-10">
            <div class="form-group col-xs-12">
                <%= f.label :"郵便番号(ハイフンなし)" ,class: "col-xs-3 control-label" %>
                <%= f.text_field :postcode, :placeholder => "0000000", class: "col-xs-4 form-control-static postal_code" %>
            </div>

            <div class="form-group col-xs-12">
                <%= f.label :"住所" ,class: "col-xs-3 control-label" %>
                <%= f.text_field :address, :placeholder => "東京都渋谷区神園0-0", class: "col-xs-7 form-control-static address" %>
            </div>

            <div class="form-group col-xs-12">
                <%= f.label :"宛名" ,class: "col-xs-3 control-label" %>
                <%= f.text_field :name, :placeholder => "蔵誕　美味", class: "col-xs-4 form-control-static name" %>
            </div>
            <%= f.submit '登録する' ,class: "col-xs-2 pull-right btn-lg btn-success " %>
        </div>
    <% end %>
  </div>
  <div class="row">
    <div class=" col-6">
        <table class="table table-border">
          <thead class="thead-light">
            <tr>
              <th>郵便番号</th>
              <th>住所</th>
              <th>宛名</th>
              <th></th>
            <tr>
          </thead>

          <% @addresses.each do |addresses| %>
            <tbody>
            <tr>
             	<td><%= addresses.postcode %></td>
             	<td><%= addresses.address %></td>
             	<td><%= addresses.name %></td>
             	<td><%= link_to "編集する", edit_address_path(addresses), class: 'btn btn-success' %>
                  <%= link_to "削除する", address_path(addresses), method: :delete, class: 'btn btn-danger' %>
              </td>
            </tr>
           </tbody>
         <% end %>
        </table>
      </div>
    </div>
  </div>
</div>

