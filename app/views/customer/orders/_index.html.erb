<div class="container">
  <div class="row">
    <div class="bg-secondary text-light mt-3 mb-4">
      <h4>注文履歴一覧</h4>
    </div>
    <div class="col-sm-12">
      <table class="table">
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% @orders.each do |order| %>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td><%= order.address_display %></td>
            <td><%= order.item.name %></td>
            <td><%= (order.subtotal).to_s(:delimited) %></td>
            <td><%= order.status %></td>
            <td><%= link_to '表示する', order_path, class: "btn btn-primary" %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>