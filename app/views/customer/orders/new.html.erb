<h2>注文情報入力</h2>
  <h4>支払方法</h4>
    <div>
      <%= form_with model: @order, url: orders_path, method: :post, local:true do |f| %>
        <div>
          <%= f.radio_button :payment_method, :credit_card, chedked: true %>
          <%= f.label :payment_method_credit_card, 'クレジットカード' %><br>
        </div>
        <div>
          <%= f.radio_button :payment_method, :transfer %>
          <%= f.label :payment_method_tarnsfer, '銀行振込' %>
        </div>
        <div>
          <h4>お届け先</h4>
            <div>
            <%= f.radio_button :address, "own_address" %>
            <%= f.label :address, 'ご自身の住所' %><br>
              <%= "#{current_customer.postcode} #{current_customer.address}" %><br>
              <%= "#{current_customer.first_name} #{current_customer.last_name}" %><br>
            </div>
            <div>
              <%= f.radio_button :address, "address" %>
              <%= f.label :address, '登録済住所から選択' %><br>
              <%= f.collection_select(:address, Address.all, :id, :address_display)  %><br>
            </div>
            <div>
              <%= f.radio_button :address, "new_address" %>
              <%= f.label :address, '新しいお届け先' %>
                <table class= 'new_address' %>
                  <tr>
                    <td>〒
                      <%= f.label :郵便番号（ハイフンなし） %>
                      <%= f.text_field :postcode %>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <%= f.label :住所 %>
                      <%= f.text_field :address %>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <%= f.label :宛名 %>
                      <%= f.text_field :name %>
                    </td>
                  </tr>
                </table>
              </div>
              <div class= 'actions'>
                <%= f.submit "確認画面へ進む",class: "btn btn-primary" %>
              </div>
            </div>
          </div>
        <% end %>


