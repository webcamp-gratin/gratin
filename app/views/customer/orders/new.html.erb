<div class="container">
  <div class="row">
    <div class="col-10 text-center">
      <h4 class="table-active col-3 mt-3">注文情報入力</h4>
    </div>
  </div>
  <div class= "col-10  offset-1 mt-3">
    <h4 class="col-10 sub-head font-weight-bold">支払方法</h4>
    <%= form_with model: @order, url: orders_confirm_path, method: :post, local:true do |f| %>
      <div class= "col-4 ml-3 radio">
        <%= f.radio_button :payment_method, :credit_card, chedked: true %>
        <%= f.label :payment_method_credit_card, 'クレジットカード' %><br>
      </div>
      <div class= "col-4 ml-3 radio">
        <%= f.radio_button :payment_method, :transfer %>
        <%= f.label :payment_method_tarnsfer, '銀行振込' %>
      </div>
      <h4 class="col-auto font-weight-bold">お届け先</h4>
        <div class= "col-4 ml-3 radio">
          <%= f.radio_button :address_option, "0" %>
          <%= f.label :address_option, 'ご自身の住所' %><br>
          〒<%= "#{current_customer.postcode} #{current_customer.address}" %><br>
          <%= "#{current_customer.first_name} #{current_customer.last_name}" %><br>
        </div>
        <div class= "col-4 ml-3 radio">
          <%= f.radio_button :address_option, "1" %>
          <%= f.label :address_option, '登録済住所から選択' %><br>
          <%= f.collection_select(:address_id, current_customer.addresses.all, :id, :address_display) %><br>
        </div>
        <div class= 'col-auto' %>
          <div class="col-10">
            <%= f.radio_button :address_option, "2" %>
            <%= f.label :address_option, '新しいお届け先' %>
            <div class ="form-group">
              <%= f.label :郵便番号（ハイフンなし）, class: "col-4 col-form-label" %>
              <%= f.text_field :postcode, placeholder: "0000000", class: "col-4" %>
            </div>
            <div>
              <div class="form-group">
                <%= f.label :住所, class: "col-4 col-form-label" %>
                <%= f.text_field :address, placeholder: "東京県東京市東京町00-0", class: "col-7" %>
              </div>
            </div>
            <div>
              <div class="form-group">
                <%= f.label :宛名, class: "col-4 col-form-label"  %>
                <%= f.text_field :name, placeholder: "蔵誕美味子", class: "col-4" %>
              </div>
            </div>
          </div>
          <div class= 'actions text-center'>
            <%= f.submit "確認画面へ進む",class: "btn btn-primary col-sm-2" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>


