<div class="container">
  <div class="row">
    <div class="bg-secondary text-light mt-3 mb-4">
      <h4>注文履歴詳細</h4>
    </div>
    <div>
      <p>注文情報</p>
      <table class="table">
        <tr>
          <td>注文日</td>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %><</td>
        </tr>
        <tr>
          <td>配送先</td>
          <td><%= @order.address_display %></td>
        </tr>
        <tr>
          <td>支払方法</td>
          <td><%= @order.payment_method %></td>
        </tr>
        <tr>
          <td>ステータス</td>
          <td><%= order.status %></td>
        </tr>
      </table>
      <p>請求情報</p>
      <table class="table">
        <tr>
          <td>商品合計</td>
          <td><%= ((@total_price).floor).to_s(:delimited) %><</td>
        </tr>
        <tr>
          <td>配送料</td>
          <td>800</td>
        </tr>
        <tr>
          <td>ご請求額</td>
          <td><%=( (@total_price + 800).floor).to_s(:delimited) %></td>
        </tr>
      </table>
      <p>注文内容</p>
      <table class="table">
        <thead>
          <tr>
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <%= @orders.each do |item| %>
          <tr>
            <td><%= item.name %></td>
            <td><%= (item.no_tax * 1.1).to_s(:delimited) %></td>
            <td><%= @ordered_item.amount %></td>
            <td><%= (@ordered_item.item.no_tax * 1.1 * @ordered_item.amount).floor).to_s(:delimited) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>