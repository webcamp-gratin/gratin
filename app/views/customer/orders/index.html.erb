<div class="container">
  <h4 class="table-active col-2">注文履歴一覧</h4>
  <div class="row">
    <div class="col-sm-12">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th bgcolor="#f5f5f5">注文日</th>
            <th bgcolor="#f5f5f5">配送先</th>
            <th bgcolor="#f5f5f5">注文商品</th>
            <th bgcolor="#f5f5f5">支払金額</th>
            <th bgcolor="#f5f5f5">ステータス</th>
            <th bgcolor="#f5f5f5">注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
              <td><%= order.address_display %></td>
              <td>
                <% order.ordered_items.each do |ordered_item| %>
                  <%= ordered_item.item.name %>
                <% end %>
              </td>
              <td><%= (order.subtotal).to_s(:delimited) %></td>
              <td><%= order.status_i18n %></td>
              <td><%= link_to '表示する', order_path(order), class: "btn btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>