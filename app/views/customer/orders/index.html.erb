<div class="container">
  <div class="row">
    <h4 class="table-active col-2 mt-3">注文履歴一覧</h4>
  </div>
  <div class="row">
    <div class="col-12 mt-3">
      <table class="table table-bordered">
        <thead>
          <tr>
            <td bgcolor="#f5f5f5", class= "col-1">注文日</td>
            <td bgcolor="#f5f5f5", class= "col-3">配送先</td>
            <td bgcolor="#f5f5f5", class= "col-2">注文商品</td>
            <td bgcolor="#f5f5f5", class= "col-2">支払金額</td>
            <td bgcolor="#f5f5f5", class= "col-2">ステータス</td>
            <td bgcolor="#f5f5f5", class= "col-2">注文詳細</td>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
              <td>
                〒<%= order.postcode %><br/>
                <%= order.address %><br/>
                <%= order.name %>
              </td>
              <td>
                <% order.ordered_items.each do |ordered_item| %>
                  <%= ordered_item.item.name %></br>
                <% end %>
              </td>
              <td><%= (order.subtotal).to_s(:delimited) %>円</td>
              <td><%= order.status_i18n %></td>
              <td><%= link_to '表示する', order_path(order), class: "btn btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>